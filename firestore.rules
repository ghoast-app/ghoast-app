rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ§â€â™‚ï¸ Users
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // ğŸ” Subcollections like favorite_shops, favorite_offers
      match /{subCollection=**}/{docId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // ğŸª Shops (public readable, only owners can write)
    match /shops/{shopId} {
      allow read: if true;
      allow write: if request.auth.uid != null
                    && request.resource.data.ownerId == request.auth.uid;
    }

    // ğŸ Offers (public readable, only shop owners can write)
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth.uid != null
                    && request.resource.data.shopOwnerId == request.auth.uid;
    }

    // ğŸ’¬ Contact messages (write only by users)
    match /contactMessages/{msgId} {
      allow write: if request.auth.uid != null;
      allow read: if false;
    }

    // ğŸ”’ Default deny for safety
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
